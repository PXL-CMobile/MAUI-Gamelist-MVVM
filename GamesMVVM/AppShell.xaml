<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GamesMVVM.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:GamesMVVM.Views"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="GameList View"
        ContentTemplate="{DataTemplate views:GameListView}"
        Route="GameListView" />

</Shell>
